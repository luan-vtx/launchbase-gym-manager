{% extends "layout.njk" %}

{% block content %}
  <form class="card" method="POST" action="/instructors">
    <section class="avatar"></section>
    <section class="details">

      <h3>Novo Instrutor</h3>

      <div class="item">
        <div>Avatar URL</div>
        <input
          type="url" 
          name="avatarUrl"
          placeholder="http://"
        >
      </div>

      <div class="item">
        <div>Instrutor</div>
        <input
          type="text"
          name="name"
          placeholder="digite seu nome"
        >
      </div>      

      <div class="item">
        <div>Data de nascimento</div>
        <input
          type="date"
          name="birth"
        >
      </div>

      <div class="item">
        <div>Sexo</div>
        <label for="M">
          <span>
            <input
              type="radio"
              name="gender"
              value="M"
              id="M"
              checked
            >
            Masculino
          </span>
        </label>
        <label for="F">
          <span>
            <input
              type="radio"
              name="gender"
              value="F"
              id="F"
            >
            Feminino
          </span>
        </label>
      </div>

      <div class="item">
        <div>Área de atuação</div>
        <div>
          <input
            type="text"
            name="services"
            placeholder="separe os serviços prestados por vírgula"
          >
        </div>
      </div>

      <button type="submit">Salvar</button>

    </section>
  </form>
{% endblock content %}